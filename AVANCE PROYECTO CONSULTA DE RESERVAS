

##include <iostream>
#include <vector>
#include <string>

using namespace std;

struct Pasajero {
    string nombre;
    string cedula;
    string clase;
    string ubicacion;
    int silla;
};

const int TOTAL_SILLAS = 50;
const int EJECUTIVAS = 8;
vector<Pasajero> reservas;

// Función para asignar una silla
void asignarSilla(string nombre, string cedula, string clase, string ubicacion) {
    int inicio = (clase == "Ejecutiva") ? 0 : EJECUTIVAS;
    int fin = (clase == "Ejecutiva") ? EJECUTIVAS : TOTAL_SILLAS;

    for (int i = inicio; i < fin; i++) {
        bool ocupada = false;
        for (const auto& p : reservas) {
            if (p.silla == i) {
                ocupada = true;
                break;
            }
        }
        if (!ocupada) {
            reservas.push_back({nombre, cedula, clase, ubicacion, i});
            cout << "Silla asignada: " << i << endl;
            return;
        }
    }
    cout << "No hay sillas disponibles en " << clase << endl;
}

// Función para consultar una reserva
void consultarReserva(string cedula) {
    for (const auto& p : reservas) {
        if (p.cedula == cedula) {
            cout << "Pasajero: " << p.nombre << "\nClase: " << p.clase
                 << "\nUbicación: " << p.ubicacion << "\nSilla: " << p.silla << endl;
            return;
        }
    }
    cout << "Reserva no encontrada." << endl;
}

// Función para eliminar una reserva
void eliminarReserva(string cedula) {
    for (size_t i = 0; i < reservas.size(); i++) {
        if (reservas[i].cedula == cedula) {
            reservas.erase(reservas.begin() + i);
            cout << "Reserva eliminada." << endl;
            return;
        }
    }
    cout << "Reserva no encontrada." << endl;
}

// Función para calcular el porcentaje de ocupación
void calcularOcupacion() {
    float porcentaje = (reservas.size() / (float)TOTAL_SILLAS) * 100;
    cout << "Porcentaje de ocupación: " << porcentaje << "%" << endl;
}

// Función principal con menú de opciones
int main() {
    int opcion;
    do {
        cout << "\n--- Sistema de Reservas ---\n";
        cout << "1. Asignar silla\n";
        cout << "2. Consultar reserva\n";
        cout << "3. Eliminar reserva\n";
        cout << "4. Calcular porcentaje de ocupación\n";
        cout << "5. Salir\n";
        cout << "Seleccione una opción: ";
        cin >> opcion;
        cin.ignore();

        if (opcion == 1) {
            string nombre, cedula, clase, ubicacion;
            cout << "Nombre: "; getline(cin, nombre);
            cout << "Cédula: "; getline(cin, cedula);
            cout << "Clase (Ejecutiva/Económica): "; getline(cin, clase);
            cout << "Ubicación (Ventana/Pasillo/Centro): "; getline(cin, ubicacion);
            asignarSilla(nombre, cedula, clase, ubicacion);
        } else if (opcion == 2) {
            string cedula;
            cout << "Ingrese la cédula: "; getline(cin, cedula);
            consultarReserva(cedula);
        } else if (opcion == 3) {
            string cedula;
            cout << "Ingrese la cédula: "; getline(cin, cedula);
            eliminarReserva(cedula);
        } else if (opcion == 4) {
            calcularOcupacion();
        }

    } while (opcion != 5);

    return 0;
}
 return 0;
}
